<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/avatar_img"
        android:src="@drawable/ic_action_tablet_3_icon"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:id="@+id/device_name_textview"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/avatar_img"
        android:layout_toRightOf="@+id/avatar_img"
        android:layout_toEndOf="@+id/avatar_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activated"
        android:layout_marginTop="8dp"
        android:id="@+id/device_status_textview"
        android:layout_below="@+id/device_name_textview"
        android:layout_toRightOf="@+id/avatar_img"
        android:layout_toEndOf="@+id/avatar_img"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/approval_image_view"
        android:src="@drawable/ic_action_action_done"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
